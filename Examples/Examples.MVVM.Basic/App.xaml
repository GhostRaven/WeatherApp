<Application
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Examples.MVVM.Basic.Views"
             xmlns:viewModels="clr-namespace:Examples.MVVM.Basic.ViewModels"
             x:Class="Examples.MVVM.Basic.App">
    <Application.Resources>

        <DataTemplate DataType="{x:Type viewModels:WeatherViewModel}">
            <views:WeatherView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:ForecastViewModel}">
            <views:ForecastView />
        </DataTemplate>
        
    </Application.Resources>
</Application>
